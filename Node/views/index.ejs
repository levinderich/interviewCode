<% include partials/head %>
<% include partials/nav %>

<body>
<div class="col-sm-8 col-sm-offset-2">
    <div>
        <h1>Maverick Inc. Movies</h1>

        <table class="table table-bordered table-responsive">
            <tr>
                <th>Title</th>
                <th>Poster</th>
                <th>Status</th>
                <th>Featured</th>
                <th></th>
            </tr>
            <% movies.forEach(function(movie) { %>
            <tr>
                <td><%= movie.title %></td>
                <td><%= movie.poster %></td>
                <td><%= movie.status %></td>
                <td><%= movie.featured %></td>
                <td style="text-align: center">
                    <a class="btn btn-primary" href="/movie/<%= movie.id %>">Edit</a>
                    <a class="btn btn-danger" href="/movie/delete/<%= movie.id %>">Delete</a>
                </td>
            </tr>
            <% }) %>
        </table>

        <h3>Create Movie</h3>
        <form method="post" action="/movie/create">
            <div class="form-group">
                <label for="title">Title</label>
                <input class="form-control" name="title"/>
            </div>

            <div class="form-group">
                <label for="poster">Poster</label>
                <input class="form-control" name="poster"/>
            </div>

            <div class="form-group">
                <label for="featured">Featured</label>
                <select class="form-control" name="featured">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
            </div>

            <input class="btn btn-primary" type="submit" value="Create"/>
        </form>
    </div>
</div>
</body>
</html>
